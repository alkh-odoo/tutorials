<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_estate_property_view" model="ir.actions.act_window">
        <field name="name">Property estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_available': True}</field>
    </record>
    
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties" decoration-muted="state == 'sold'" decoration-success="state in ('recieved', 'accepted')" decoration-bf="state == 'accepted'">
                <field name="name"/>                
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="selling_price"/>
                <field name="state"/>
                <field name="date_availability" optional="1"/>
             </tree>
        </field>
    </record>

    <record id="estate_property_form_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Registration">
                <header>
                    <button name="action_sold" type="object" string="Action sold"/>
                    <button name="action_cancel" type="object" string="Cancel deal"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>  
                        </h1> 
                    </div>
                   <group>
                    
                        <group> 
                            <field name="active"/>            
                            <field name="postcode"/>
                            <field name="type_id"/>
                            <field name="best_price"/>
                        </group>
                        <group>
                            <field name="expected_price"/>  
                            <field name="bedrooms"/>  
                            <field name="selling_price"/>
                            <field name="date_availability"/>   
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>                
                        </group>
                    </group>
                    <notebook>
                        <page string="Internal Notes" name="internal_notes">
                            <group>
                                <field name="description"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="living_area"/>
                                <field name="orientation" readonly ='garden==False'/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offer list" name="offer_list">
                            <field name="offer_ids" widget="mrp_production_components_x2many">
                                <tree>
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="validity"/>
                                    <field name="date_deadline"/>
                                    <button name="confirm_offer" string="Confirm" type="object" icon="fa-check" invisible="status in ('accepted','refused')"/>
                                    <button name="deny_offer" string="Deny" type="object" icon="fa-times" invisible="status in ('accepted','refused')"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Other info" name="other_info">
                            <group string="Buy/Sale details">
                                <field name="buyer_id"/>
                                <field name="sales_person_id"/>   
                            </group>
                        </page>
                    </notebook>  
                </sheet>    
            </form>
        </field>
    </record>
    
    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="property search">
                <field name="name"/>                
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area" string="Minimum Living Area" filter_domain="[('living_area', '>=', self)]"/>
                <separator/>
                <filter string="state" name="current_state" domain="['|',('state','=','new'),('state','=','received')]"/>
                <filter string="by postcode" name="group_by_postcode" context="{'group_by':'postcode'}"/>
                <filter string="by postcode" name="group_by_type" context="{'group_by':'postcode'}"/>
                <filter name="available" string="Available" domain="[('active','=','True')]" help="Show only Available"/>
            </search>
        </field>
    </record>
</odoo>